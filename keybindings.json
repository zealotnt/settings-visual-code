// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "alt+[",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "alt+]",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "alt+enter",
        "command": "editor.action.goToDeclaration",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "ctrl+cmd+w",
        "command": "-workbench.action.toggleTabsVisibility"
    },
    {
        "key": "ctrl+cmd+w",
        "command": "workbench.action.closeOtherEditors"
    },
    // not work yet, going to migrate to VScapeCode
    {
        "key": "cmd+; cmd+f p",
        "command": "workbench.action.files.copyPathOfActiveFile"
    },
    {
        "key": "cmd+; cmd+f r",
        "command": "copyRelativeFilePath"
    },
    // trailing whitespace
    {
        "key": "cmd+shift+r",
        "command": "trailing-spaces.deleteTrailingSpaces",
        "when": "editorTextFocus"
    },
    // bookmarks
    {
        "key": "ctrl+f2",
        "command": "bookmarks.toggle",
        "when": "editorTextFocus"
    },
    {
        "key": "f2",
        "command": "bookmarks.jumpToNext",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+f2",
        "command": "bookmarks.clear",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+shift+r",
        "command": "trailing-spaces.deleteTrailingSpaces",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+h",
        "command": "extension.vim_home",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "shift+l",
        "command": "extension.vim_end",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
    },
    // projects
    {
        "key": "cmd+ctrl+p",
        "command": "projectManager.listProjects"
    },
    // panels
    {
        "key": "ctrl+b ctrl+m",
        "command": "workbench.action.togglemaximizedpanel"
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "cmd+, k",
        "command": "workbench.action.openGlobalKeybindings"
    },
    {
        "key": "cmd+k cmd+s",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+, c",
        "command": "workbench.action.openSettings"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.focusLeftGroup"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.focusRightGroup"
    },
    {
        "key": "alt+j",
        "command": "workbench.action.focusBelowGroup"
    },
    {
        "key": "alt+k",
        "command": "workbench.action.focusAboveGroup"
    },
    {
        "key": "cmd+w",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        "key": "cmd+s",
        "command": "workbench.action.files.save"
    },
    {
        "key": "cmd+v",
        "command": "editor.action.clipboardPasteAction"
    },
    // Windows manipulation
    {
        "key": "cmd+t",
        "commands": "workbench.action.nextEditor"
    },
    // https://superuser.com/questions/1290030/vs-code-how-can-i-move-the-cursor-by-display-line-when-wrapping-in-vs-code
    {
        "key": "up",
        "command": "cursorUp",
        "when": "editorTextFocus && vim.active && !inDebugRepl && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "down",
        "command": "cursorDown",
        "when": "editorTextFocus && vim.active && !inDebugRepl && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "k",
        "command": "cursorUp",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal' && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "j",
        "command": "cursorDown",
        "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode == 'Normal' && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    }
]
